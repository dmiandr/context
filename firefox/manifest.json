{
  "manifest_version": 2,
  "default_locale": "en",
  "name": "Context RepuTracker-users reputation tracker",
  "short_name": "Context RepuTracker",
  "version": "0.61",
  "description": "Расширение для отслеживания репутации пользователей социальных сетей",

  "developer": {
        "name": "dmitrevo",
        "url": "https://cont.ws/@dmitrevo"
    },

  "homepage_url": "https://github.com/dmiandr/context",


  "browser_specific_settings": {
    "gecko": {
      "id": "dmiandich@yandex.ru"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
      }
  },
  "icons": {
    "48": "icons/context48.png"
  },
  
  "browser_action": {
    "browser_style": false,
    "default_area": "navbar",
    "default_icon": {
      "48": "icons/context48.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["browser-polyfill.js", "contextlib.js", "background.js"]
  },
  
  "commands": {
      "store-all-events": {
          "suggested_key": { "default": "Ctrl+Shift+1" },
          "description": "Add all events on page to events base"
      }
  },

  "content_scripts": [
    {
      "matches": ["*://*.cont.ws/*", "*://*.vk.com/*", "*://*.livejournal.com/*", "*://*.youtube.com/*", "*://*.habr.com/*", "file:///*"],
      "css": ["ddmenu.css"],
      "js": ["browser-polyfill.js", "mutation.js", "userinfodialog.js", "contextlib.js", "initfirst.js", "contws.js", "vkcom.js", "ljcom.js", "youtubecom.js", "habrcom.js", "content.js"]
    }
  ],
  "incognito": "spanning",
  "permissions": [
   "storage",
   "activeTab",
   "tabs"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": ["addhistorydialog.html", "userinfodialog.html", "userinfodialog.js", "contextlib.js", "icons/link32.png", "icons/rarr32.png"]
}
